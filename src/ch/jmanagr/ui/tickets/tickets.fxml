<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="Content" fx:id="ticketView" cache="false" minHeight="0.0" minWidth="0.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.jmanagr.ui.tickets.TicketController">
    <children>
        <GridPane vgap="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>
                <TableView fx:id="ticketTable" editable="true" prefHeight="250.0" prefWidth="740.0"
                           tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="idCol" editable="false" prefWidth="75.0" text="ID"/>
                        <TableColumn fx:id="departmentCol" editable="false" prefWidth="75.0" text="Department"/>
                        <TableColumn fx:id="nameCol" editable="false" prefWidth="75.0" text="Name"/>
                        <TableColumn fx:id="dateCol" editable="false" prefWidth="75.0" text="Datum"/>
                        <TableColumn fx:id="userCol" editable="false" prefWidth="75.0" text="Benutzer"/>
                        <TableColumn fx:id="agentCol" editable="false" prefWidth="87.0" text="Agent"/>
                        <TableColumn fx:id="resourceCol" editable="false" minWidth="-1.0" prefWidth="64.0"
                                     text="Ressource"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <FlowPane hgap="10.0" GridPane.rowIndex="1">
                    <children>
                        <Button fx:id="newTicketBtn" mnemonicParsing="false" onAction="#newTicket" text="Neues Ticket"/>
                        <Button fx:id="editBtn" mnemonicParsing="false" onAction="#editTicket" text="Editieren"/>
                        <Button fx:id="delBtn" mnemonicParsing="false" onAction="#deleteTicket" text="LÃ¶schen"/>
                    </children>
                    <padding>
                        <Insets bottom="20.0"/>
                    </padding>
                </FlowPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
