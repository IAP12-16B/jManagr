<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="Content" fx:id="departmentView" minHeight="0.0" minWidth="0.0" prefHeight="588.0" prefWidth="769.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.jmanagr.ui.departments.DepartmentController">
    <children>
        <GridPane vgap="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <TableView fx:id="depTable" editable="true" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="idCol" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0"
                                     prefWidth="-1.0" text="ID" visible="false"/>
                        <TableColumn fx:id="nameCol" editable="true" maxWidth="1.7976931348623157E308" minWidth="250.0"
                                     prefWidth="-1.0" text="Name"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <FlowPane hgap="10.0" GridPane.rowIndex="1">
                    <children>
                        <TextField fx:id="nameField"/>
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addDep" text="Hinzufügen"/>
                        <Button fx:id="delBtn" mnemonicParsing="false" onAction="#deleteDep" text="Löschen"/>
                    </children>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="20.0"/>
                    </padding>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </GridPane>
    </children>
</AnchorPane>
